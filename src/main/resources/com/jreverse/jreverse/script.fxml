<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jreverse.jreverse.ScriptViewController">
   <children>
      <TextArea fx:id="ScriptTextBox" layoutX="14.0" layoutY="69.0" onKeyTyped="#UpdateScriptFile" prefHeight="284.0" prefWidth="346.0" promptText="Preview Script Here">
         <font>
            <Font size="10.0" />
         </font>
      </TextArea>
      <Label layoutX="14.0" layoutY="48.0" text="Script Preview:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#runScriptOnTarget" prefHeight="25.0" prefWidth="346.0" text="Execute Script On Target" />
      <Button layoutX="241.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#LoadScriptFile" prefHeight="25.0" prefWidth="346.0" text="Load Script File" />
      <Button fx:id="SetupScriptenvBut" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#setupScriptingEnv" prefHeight="25.0" prefWidth="214.0" text="Setup Scripting Enviroment" />
      <Label layoutX="372.0" layoutY="48.0" text="Script Output:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextArea fx:id="ScriptOutputBox" editable="false" layoutX="372.0" layoutY="69.0" prefHeight="284.0" prefWidth="214.0" promptText="Output will go here">
         <font>
            <Font size="10.0" />
         </font>
      </TextArea>
      <Button layoutX="372.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#updateOutput" prefHeight="25.0" prefWidth="105.0" text="Get output" />
      <Button layoutX="481.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#flushOutput" prefHeight="25.0" prefWidth="105.0" text="Flush output" />
   </children>
</AnchorPane>
