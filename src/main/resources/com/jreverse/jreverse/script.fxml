<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jreverse.jreverse.ScriptViewController">
   <children>
      <TextArea fx:id="ScriptTextBox" layoutX="14.0" layoutY="69.0" onKeyTyped="#UpdateScriptFile" prefHeight="365.0" prefWidth="313.0" promptText="Preview Script Here">
         <font>
            <Font size="10.0" />
         </font>
      </TextArea>
      <Label layoutX="14.0" layoutY="48.0" text="Script Preview:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Button layoutX="136.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#runScriptOnTarget" prefHeight="25.0" prefWidth="191.0" text="Execute Script On Interpreter" />
      <Button layoutX="241.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#LoadScriptFile" prefHeight="25.0" prefWidth="457.0" text="Load Script File" />
      <Button fx:id="SetupScriptenvBut" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#setupScriptingEnv" prefHeight="25.0" prefWidth="214.0" text="Setup Scripting Enviroment" />
      <Label layoutX="337.0" layoutY="48.0" text="Script Output:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextArea fx:id="ScriptOutputBox" editable="false" layoutX="334.0" layoutY="69.0" prefHeight="365.0" prefWidth="191.0" promptText="Output will go here">
         <font>
            <Font size="10.0" />
         </font>
      </TextArea>
      <Button layoutX="336.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#updateOutput" prefHeight="25.0" prefWidth="83.0" text="Get output" />
      <Button layoutX="429.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#flushOutput" prefHeight="25.0" prefWidth="96.0" text="Flush output" />
      <Label layoutX="534.0" layoutY="48.0" text="Interpreters (ID):">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ListView fx:id="InterpretersListView" editable="true" layoutX="534.0" layoutY="69.0" onMouseClicked="#SelectInterpreter" prefHeight="300.0" prefWidth="166.0" />
      <Button layoutX="534.0" layoutY="409.0" mnemonicParsing="false" onMouseClicked="#DeleteInterpreter" prefHeight="25.0" prefWidth="166.0" text="Delete Interpreter" />
      <Button layoutX="534.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#AddInterpreter" prefHeight="25.0" prefWidth="166.0" text="Add Interpreter" />
      <TextField fx:id="CurrentIDBox" editable="false" layoutX="14.0" layoutY="441.0" prefHeight="25.0" prefWidth="109.0" />
      <Button layoutX="534.0" layoutY="378.0" mnemonicParsing="false" onMouseClicked="#RefreshInterpreters" prefHeight="25.0" prefWidth="166.0" text="Refresh" />
   </children>
</AnchorPane>
